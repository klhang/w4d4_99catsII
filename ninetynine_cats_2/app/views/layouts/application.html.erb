<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% if logged_in? %>
    <header>
      <%= current_user.user_name %>
      <%= button_to "logout", session_url, method: :delete %>
    </header>


    <% end %>

    <%= yield %>
  </body>
</html>
